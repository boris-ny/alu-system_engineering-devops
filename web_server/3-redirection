#!/usr/bin/env bash
# Install Nginx if not already installed
sudo apt update
sudo apt install nginx

# Create a file named redirects.conf in the /nginx/example.com directory
sudo mkdir -p /nginx/example.com
sudo touch /nginx/example.com/redirects.conf

# Add the following content to the redirects.conf file
# Replace example.com with your actual domain name
# Replace new_page with your desired destination page
echo 'location = /redirect_me {
  return 301 $scheme:http://boris-ny.tech;
}' | sudo tee /nginx/example.com/redirects.conf

# Include the redirects.conf file in the server block of your Nginx configuration file
# The default location of this file is /etc/nginx/sites-available/default
sudo sed -i '/server_name/a include /nginx/example.com/redirects.conf;' /etc/nginx/sites-available/default

# Reload Nginx for the changes to take effect
sudo systemctl reload nginx